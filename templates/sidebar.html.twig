<div class="col-lg-3 g-mb-50 g-mb-0--lg">

  <!-- Sidebar Navigation -->
  <div class="list-group list-group-border-0 g-mb-40">
    <!-- Overall -->
    {% if(active == 'index') %}
      <a href="{{ path('homepage') }}" class="list-group-item list-group-item-action justify-content-between active">
      {% else %}
      <a href="{{ path('homepage') }}" class="list-group-item list-group-item-action justify-content-between">
        {% endif %}
      <span><i class="icon-home g-pos-rel g-top-1 g-mr-8"></i> {{ app.user.username }}</span>
    </a>
    <!-- End Overall -->
    <!-- Users Contacts -->
    {% if(active == 'addPlayer') %}
      <a href="{{ path('add_player') }}" class="list-group-item list-group-item-action justify-content-between active">
    {% else %}
      <a href="{{ path('add_player') }}" class="list-group-item list-group-item-action justify-content-between">
    {% endif %}
      <span><i class="icon-notebook g-pos-rel g-top-1 g-mr-8"></i> {{ 'sidebar.calculator'|trans({},'messages') }}</span>
    </a>
    {% if app.user is not null %}
    {% if(active == 'updateArmy') %}
      <a href="{{ path('update_army') }}" class="list-group-item list-group-item-action justify-content-between active">
    {% else %}
      <a href="{{ path('update_army') }}" class="list-group-item list-group-item-action justify-content-between">
    {% endif %}
      <span><i class="icon-notebook g-pos-rel g-top-1 g-mr-8"></i> {{ 'sidebar.army'|trans({},'messages') }}</span>
    </a>
    {% endif %}
    <!-- End Users Contacts -->

    <!-- My Projects -->
    {% if(active == 'listPlayer') %}
      <a href="{{ path('list_player') }}" class="list-group-item list-group-item-action justify-content-between active">
    {% else %}
      <a href="{{ path('list_player') }}" class="list-group-item list-group-item-action justify-content-between">
    {% endif %}
      <span><i class="icon-layers g-pos-rel g-top-1 g-mr-8"></i> {{ 'sidebar.player'|trans({},'messages') }}</span>
      <span id="countPlayers" class="u-label g-font-size-11 g-bg-darkred g-rounded-20 g-px-10"></span>
    </a>
    <!-- End My Projects -->

        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin') }}" class="list-group-item list-group-item-action justify-content-between">
            <span><i class="icon-admin g-pos-rel g-top-1 g-mr-8"></i> {{ 'sidebar.admin'|trans({},'messages') }}</span>
          </a>
        {% endif %}
    <!-- Settings -->
        {#{% if active == 'settings' %}
        <a href="{{ path('user_config') }}" class="list-group-item list-group-item-action justify-content-between active">
        {% else %}
          <a href="{{ path('user_config') }}" class="list-group-item list-group-item-action justify-content-between">
          {% endif %}
      <span><i class="icon-settings g-pos-rel g-top-1 g-mr-8"></i> Settings</span>
    </a>#}
    <!-- End Settings -->
        <a href="{{ path('logout') }}" class="list-group-item list-group-item-action justify-content-between">
            <span><i class="icon-settings g-pos-rel g-top-1 g-mr-8"></i> {{ 'sidebar.logout'|trans({},'messages') }}</span>
          </a>
  </div>
  <!-- End Sidebar Navigation -->

</div>
